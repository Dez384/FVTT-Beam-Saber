{
  "id": "beam-saber",
  "title": "Beam Saber Test",
  "description": "Beam Saber game system based on the game from Austin Ramsay - https://austin-ramsay.itch.io/beamsaber",
  "version": "0.6.0",
  "compatibility": {
    "minimum": 12,
    "verified": "12.330"
  },
  "url": "https://github.com/Dez384/fvtt-beam-saber/",
  "manifest": "https://raw.githubusercontent.com/Dez384/fvtt-beam-saber/master/system.json",
  "download": "https://github.com/Dez384/fvtt-beam-saber/archive/refs/tags/v0.6.0.zip",
  "authors": [
    { "name": "conordjpc"},
    { "name": "grankless"},
    { "name": "Dez384"}
  ],
  "esmodules": [
    "module/blades.js"
  ],
  "styles": [
    "styles/blades.css"
  ],
  "languages": [
    {
      "lang": "en",
      "name": "English",
      "path": "lang/en.json"
    },
    {
      "lang": "ru",
      "name": "Russian",
      "path": "lang/ru.json"
    },
    {
      "lang": "es",
      "name": "Spanish",
      "path": "lang/es.json"
    },
    {
      "lang": "fr",
      "name": "French",
      "path": "lang/fr.json"
    },
    {
      "lang": "pl",
      "name": "Polish",
      "path": "lang/pl.json"
    },
    {
      "lang": "de",
      "name": "Deutsch",
      "path": "lang/de.json"
    },
    {
      "lang": "pt",
      "name": "Portuguese",
      "path": "lang/pt.json"
    },
    {
      "lang": "it",
      "name": "Italian",
      "path": "lang/it.json"
    }
  ],
  "packs": [
    {
      "name": "class",
      "label": "Classes",
      "system": "beam-saber",
      "path": "./packs/classes.db",
      "type": "Item"
    },
    {
      "name": "item",
      "label": "Items",
      "system": "beam-saber",
      "path": "./packs/items.db",
      "type": "Item"
    },
    {
      "name": "ability",
      "label": "Abilities",
      "system": "beam-saber",
      "path": "./packs/abilities.db",
      "type": "Item"
    },
    {
      "name": "crew_reputation",
      "label": "Crew Reputation",
      "system": "beam-saber",
      "path": "./packs/crew_reputation.db",
      "type": "Item"
    },
    {
      "name": "crew_type",
      "label": "Crew Types",
      "system": "beam-saber",
      "path": "./packs/crew_types.db",
      "type": "Item"
    },
    {
      "name": "crew_upgrade",
      "label": "Crew Upgrades",
      "system": "beam-saber",
      "path": "./packs/crew_upgrades.db",
      "type": "Item"
    },
    {
      "name": "crew_ability",
      "label": "Crew Abilities",
      "system": "beam-saber",
      "path": "./packs/crew_abilities.db",
      "type": "Item"
    },
    {
      "name": "vehicle_gear",
      "label": "Vehicle Gear",
      "system": "beam-saber",
      "path": "./packs/vehicle_gear.db",
      "type": "Item"
    },
	{
      "name": "entanglements",
      "label": "Entanglements",
      "system": "beam-saber",
      "path": "./packs/entanglements.db",
      "type": "RollTable"
    },
	{
      "name": "entanglements-journals",
      "label": "Entanglements Journals",
      "system": "beam-saber",
      "path": "./packs/entanglements-journals.db",
      "type": "JournalEntry"
    },
	{
      "name": "entanglements-macro",
      "label": "Entanglements Macro",
      "system": "beam-saber",
      "path": "./packs/entanglements-macro.db",
      "type": "Macro"
    }
  ],
  "packFolders": [
    {
      "name": "Character Options",
      "sorting": "m",
      "packs": ["class", "ability", "item", "background", "heritage", "vice"]
	},
    {
      "name": "Crew Options",
      "sorting": "m",
      "packs": ["crew_type", "crew_ability", "crew_upgrade", "prison", "crew_reputation", "hunting_grounds"]
	},
    {
      "name": "Factions & NPCs",
      "sorting": "m",
      "packs": ["faction", "npc"]
	},
    {
      "name": "Entanglements",
      "sorting": "m",
      "packs": ["entanglements-macro", "entanglements", "entanglements-journals"]
	}
  ]
}
